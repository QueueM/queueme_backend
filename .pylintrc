[MASTER]
ignore=venv
load-plugins=pylint_django

[MESSAGES CONTROL]
disable=
    missing-docstring,
    invalid-name,
    too-few-public-methods,
    no-member,
    no-self-use,
    too-many-arguments,
    too-many-locals,
    too-many-instance-attributes,
    too-many-branches,
    too-many-statements,
    duplicate-code

[FORMAT]
max-line-length=120

[DESIGN]
max-attributes=10
max-args=10
max-locals=15
max-branches=12
max-statements=50

[TYPECHECK]
ignored-modules=django
ignored-classes=django.db.models.Model,django.db.models.query.QuerySet